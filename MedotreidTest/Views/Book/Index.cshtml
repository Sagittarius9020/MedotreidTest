@model IEnumerable<MedotreidTest.Models.Book>

@{
    ViewBag.Title = "Список Книг";

}

<h2>Список Книг</h2>

<p>@Html.ActionLink("Добавить книгу", "Create")</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        <th>
           @Html.DisplayNameFor(model => model.About)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About)
            </td>
            <td>
                @Html.ActionLink("Редактировать книгу", "Edit", new { id = item.Id }) 
            </td>
        </tr>
    }

</table>
