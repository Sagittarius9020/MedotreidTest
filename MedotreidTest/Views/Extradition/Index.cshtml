@model IEnumerable<MedotreidTest.Models.Extradition>

@{
    ViewBag.Title = "Список выданных книг";
}

<h2>Список выданных книг</h2>

<p>
    @Html.ActionLink("Выдать книгу", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название книги
        </th>
        <th>
            Клиент
        </th>
        <th>
            Дата выдачи
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Book.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateExtrdition)
        </td>
        <td>
            @Html.ActionLink("Возврат книги", "Edit", new { id=item.Id })
        </td>
    </tr>
}

</table>
